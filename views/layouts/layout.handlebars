<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>| Mongo Scraper |  {{title}}</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet"  href="slick/slick.css" type="text/html"/>
        <link rel="stylesheet"  href="slick/slick-theme.css" type="text/html"/>
        
    </head>
    <body>
      <div class="container">
        <img src="http://i67.tinypic.com/300gzdl.jpg" alt="" id="logo" class="fixed">
          <div class="container" id="article-container">
              <div class="container">
                  <div id="container">
                      <div class="row container">
                          <div id="cards-holder">
                                  {{{body}}}
                          </div>
                      </div>
                  </div>
              </div>            
             
          </div>
      </div>
      <div class="container">
        <footer class="footer"> <p></p>
        </footer>
      </div>
        <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous" type="text/javascript"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js" type="text/javascript"></script>
        <script src="https://cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.1/slick/slick.min.js" type="text/javascript"></script>
    </body>
</html>




<style>
  html{
    color: black;
  }
  .container{
    width: 100%;
  }
    html{
        background-image: url("");
        background-color: #fbf7f5;
        background-position-x: 40%;
    }
    a{
      color: white;
    }

    #logo, #article-container{
      width: 90%;
      margin: 1% 0 0 12% ;
    }
    #article-container{
      padding-top: 2%;
    }
    #logo{
      border-top: 5px black double;
      border-bottom: 5px black double;
      padding: 5%;
      padding-bottom: 2%;
    }
    .footer{
      border-top: 5px black double;
      border-bottom: 5px black double;
      margin: 5% 0 0 12% ;

    }
    .side-nav{
      width: 12%;
    }

    .modal{
      width: 500px;
      height: 450px;
    }

    body {
      display: flex;
      min-height: 100vh;
      flex-direction: column;
    }

    main {
      flex: 1 0 auto;
    }
        
   textarea{
     height: 150px;
   }

  .card-action{
    margin-top: 10%;
  }
  #add-note-title{
    color: orangered;
  }


</style>


{{!-- side-nav --}}
<ul id="slide-out" class="side-nav fixed">
  <li><a id="home" href="/">Home</a></li>
  <li><a id="saved-articles">Saved Articles</a></li>
  <li><div class="divider"></div></li>
  <li><a id="scrape-new">Scrape New </a></li>
  <li><a id="clear">Clear Articles</a></li>
  <li><a id="add-article">Add Article</a></li>
  <li><a id="saved-card">Saved Cards</a></li>
</ul>

{{!-- notes-modal --}}
<div id="notes-modal" class="modal">
  <span class="modal-close right"><i class="material-icons">close</i></span>
  <div class="modal-content">
    <div class="col s6">
      <div class="card">
        <div class="card-content transparent">
          <span class="card-title"><a id="add-note-title">Add Note</a></span>
          <textarea id="note-value"></textarea>
        <span class="right"><a class="waves-effect waves-light btn" id="add-note"><i class="material-icons">add</i></a></span>
        </div>
        <div class="card-action">
          <a href="#" class="activator">View Notes</a>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">Saved Notes<i class="material-icons right">close</i></span>
            <div id="notes-holder" class="center"></div>
        </div>
      </div>
    </div>
  </div>
</div>




<script>
  var articleTitle = "Article Title"
  var articlePreview = "Article Preview"

  $(document).ready(function(){
    $('.multiple-items').slick({
      infinite: true,
      slidesToShow: 3,
      slidesToScroll: 3
    })
    $('.modal').modal()
    $('.dropdown-trigger').dropdown();
        $('.tooltipped').tooltip();
  })

$("#add-article").on("click", function(){
  addArticle(articleTitle, articlePreview)
})
$("#saved-card").on("click", function(){
  savedCard(articleTitle, articlePreview)
})

$("#clear").on("click", function(){
  clearArticles()
})

$("#add-note").on("click", function(){
  saveNote()
})

$("#saved-articles").on("click", function(){
  displaySavedArticles()
})

$("#scrape-new").on("click", function(){
  scrapeNew()

})


function clearArticles(){
  $("#article-cards-holder").empty()
  console.log("Cleared Articles")

}

function scrapeNew(){
  console.log("Scrape new articles")
}


function displaySavedArticles(){
  console.log("Display Saved Articles")
}


function saveNote(){
  var noteValue = $("#note-value").val()
  $("#notes-holder").append( noteValue )
}

function addArticle(articleTitle, articlePreview){
  $("#article-cards-holder").append(`
          <div class="multiple-items">
            <div class="col s4 ">
                <div class="card transparent">
                    <div class="card-content">
                        <span class="card-title">`+ articleTitle +`</span>
                            <a id="save" class="btn-floating btn waves-effect waves-light green right save-article"><i class="material-icons">add</i></a>
                            <p>`+ articlePreview +`</p>         
                    </div>
                    <div class="card-action"></div>
                </div>
            </div>
        </div>
  `)

function savedArticle(){
  console.log("Article Saved")
}

$(".save-article").on("click", function(){
  savedArticle()
})

}


function savedCard(articleTitle, articlePreview){
  $("#article-cards-holder").append(`
          <div class="multiple-items">
            <div class="col s4 ">
                <div class="card transparent">
                    <div class="card-content">
                        <span class="card-title">`+ articleTitle +`</span>
                           <span id="unsave-btn"> <btn class="btn-floating btn waves-effect waves-light red right"><i class="material-icons">remove</i></btn></span>
                            <p>`+ articlePreview +`</p>         
                    </div>

                    <div class="card-action">
                        <a id="article-notes" data-target="notes-modal" class="modal-trigger">Article Notes</a>
                    </div>
                </div>
            </div>
        </div>
  `)

  function unsave(){
    console.log("Unsaved")
  }

  $("#unsave-btn").on("click", function(){
    unsave()

  })
}

</script>